<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="JavaLibrary3PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entity.Categoria</class>
    <class>entity.Departamento</class>
    <class>entity.Estado</class>
    <class>entity.Incidencia</class>
    <class>entity.Prioridad</class>
    <class>entity.Rol</class>
    <class>entity.Ticket</class>
    <class>entity.Usuario</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tele-ticket?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="mortal"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="mortal"/>
    </properties>
  </persistence-unit>
</persistence>
